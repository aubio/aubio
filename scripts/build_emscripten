#! /bin/bash

function checkprog() {
  type $1 >/dev/null 2>&1 || { echo >&2 "$1 required but not found, aborting."; exit 1; }
}

checkprog emcc
checkprog emconfigure
checkprog emmake

# clean
./waf distclean

# configure
emconfigure ./waf configure --with-target-platform emscripten $*

# build
emmake ./waf build --disable-tests --disable-examples --disable-docs
